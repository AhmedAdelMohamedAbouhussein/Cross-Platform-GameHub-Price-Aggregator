{
  "manifest_version": 3,
  "name": "PSN Auto Login",
  "version": "1.0",
  "description": "Automatically retrieves NPSSO cookie from PlayStation website.",
  "permissions": [
    "cookies",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.sony.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "PSN Auto Login",
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
